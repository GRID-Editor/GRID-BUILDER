{
    "name": "grid-cloud",
    "displayName": "GRID Cloud",
    "description": "Cloud synchronization and AI services for GRID",
    "version": "1.0.0",
    "publisher": "grid",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onView:grid.account",
        "onCommand:grid.cloud.login",
        "onCommand:grid.cloud.sync"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "grid-cloud",
                    "title": "GRID Cloud",
                    "icon": "resources/cloud-icon.svg"
                }
            ]
        },
        "views": {
            "grid-cloud": [
                {
                    "id": "grid.account",
                    "name": "Account"
                }
            ]
        },
        "commands": [
            {
                "command": "grid.cloud.login",
                "title": "GRID: Sign In",
                "category": "GRID Cloud"
            },
            {
                "command": "grid.cloud.logout",
                "title": "GRID: Sign Out",
                "category": "GRID Cloud"
            },
            {
                "command": "grid.cloud.sync",
                "title": "GRID: Sync Workspaces",
                "category": "GRID Cloud",
                "icon": "$(sync)"
            }
        ],
        "configuration": {
            "title": "GRID Cloud",
            "properties": {
                "grid.cloud.apiBaseUrl": {
                    "type": "string",
                    "default": "https://grideditor.com",
                    "description": "Base URL for GRID Cloud API"
                },
                "grid.cloud.autoSync": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically sync workspace changes"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.0"
    }
}
